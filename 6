package main

import (
	"fmt"
	"time"
)

type Funcionário struct {
	Nome    string
	Salário float64
	Idade   int
}

func (f *Funcionário) AumentarSalário(percentual float64) {
	aumento := f.Salário * (percentual / 100)
	f.Salário += aumento
}

func (f *Funcionário) DiminuirSalário(percentual float64) {
	desconto := f.Salário * (percentual / 100)
	f.Salário -= desconto
}

func (f *Funcionário) TempoDeServiço() int {
	idadeInícioTrabalho := 18
	idadeAtual := time.Now().Year() - f.Idade
	tempoDeServiço := idadeAtual - idadeInícioTrabalho
	return tempoDeServiço
}

func main() {
	funcionário := Funcionário{
		Nome:    "João",
		Salário: 2000,
		Idade:   25,
	}

	fmt.Println("Salário inicial:", funcionário.Salário)
	funcionário.AumentarSalário(10)
	fmt.Println("Salário após aumento:", funcionário.Salário)
	funcionário.DiminuirSalário(5)
	fmt.Println("Salário após desconto:", funcionário.Salário)

	tempoDeServiço := funcionário.TempoDeServiço()
	fmt.Println("Tempo de serviço:", tempoDeServiço, "anos")
}
